<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Map requests to Node app -->
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="NodeApp" enabled="true" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Optional: helpful for debugging -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />

    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>
