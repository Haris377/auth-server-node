generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  username      String     @unique
  email         String     @unique
  password_hash String     @map("password_hash")
  is_active     Boolean    @default(true)  @map("is_active")
  phone         String?
  department_id Int?
  created_at    DateTime   @default(now())  @map("created_at")
  updated_at    DateTime   @updatedAt  @map("updated_at")
  created_by    String?    @map("created_by")
  updated_by    String?    @map("updated_by")
  roles         UserRole[]
  department    Department? @relation(fields: [department_id], references: [id])
  creator       User?      @relation("UserCreatedBy", fields: [created_by], references: [id])
  updater       User?      @relation("UserUpdatedBy", fields: [updated_by], references: [id])
  createdUsers  User[]     @relation("UserCreatedBy")
  updatedUsers  User[]     @relation("UserUpdatedBy")

  @@map("users")
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  created_at  DateTime         @default(now())  @map("created_at")
  updated_at  DateTime         @updatedAt  @map("updated_at")
  permissions RolePermission[]
  users       UserRole[]

  @@map("roles")
}

model Permission {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  created_at  DateTime         @default(now())  @map("created_at")
  updated_at  DateTime         @updatedAt  @map("updated_at")
  roles       RolePermission[]

  @@map("permissions")
}

model UserRole {
  id         String   @id @default(uuid())
  user_id    String   @map("user_id")
  role_id    String   @map("role_id")
  created_at DateTime @default(now())  @map("created_at")
  role       Role     @relation(fields: [role_id], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_roles")
}

model RolePermission {
  id            String     @id @default(uuid())
  role_id       String     @map("role_id")
  permission_id String     @map("permission_id")
  created_at    DateTime   @default(now())  @map("created_at")
  permission    Permission @relation(fields: [permission_id], references: [id], onDelete: Cascade)
  role          Role       @relation(fields: [role_id], references: [id], onDelete: Cascade)

  @@map("role_permissions")
}

model Project {
  id                  Int       @id @default(autoincrement())
  project_id          String    @unique @map("project_id")
  project_name        String    @map("project_name")
  description         String?   @db.Text
  start_date          DateTime? @db.Date @map("start_date")
  end_date            DateTime? @db.Date @map("end_date")
  priority            String?    @db.VarChar(50)
  status              String?    @db.VarChar(50)
  budget              Decimal?  @db.Decimal(10, 2)
  client_name         String?   @map("client_name")
  project_manager     String?   @map("project_manager")
  created_at          DateTime  @default(now()) @map("created_at")
  updated_at          DateTime  @updatedAt @map("updated_at")
  completion_percentage Int?    @default(0) @map("completion_percentage")
  created_by          String?   @map("created_by")
  updated_by          String?   @map("updated_by")
  tasks               Task[]
  team_members        ProjectTeamMember[]

  @@map("projects")
}

model Task {
  id              Int       @id @default(autoincrement())
  task_id         String    @unique @map("task_id")
  project_id      String?   @map("project_id")
  task_name       String    @map("task_name")
  description     String?   @db.Text
  assigned_to     String?   @map("assigned_to")
  priority        String?   @db.VarChar(50)
  status          String?   @db.VarChar(50)
  due_date        DateTime? @db.Date @map("due_date")
  estimated_hours Decimal?  @db.Decimal(5, 2) @map("estimated_hours")
  actual_hours    Decimal?  @default(0) @db.Decimal(5, 2) @map("actual_hours")
  tags             String?   @db.Text
  created_at       DateTime  @default(now()) @map("created_at")
  updated_at       DateTime  @updatedAt @map("updated_at")
  completed_at     DateTime? @map("completed_at")
  created_by       String?   @map("created_by")
  updated_by       String?   @map("updated_by")
  project          Project?  @relation(fields: [project_id], references: [project_id], onDelete: NoAction, onUpdate: NoAction)

  @@map("tasks")
}

model Department {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  created_at  DateTime  @default(now()) @map("created_at")
  updated_at  DateTime  @updatedAt @map("updated_at")
  users       User[]

  @@map("departments")
}

model ProjectTeamMember {
  id           Int      @id @default(autoincrement())
  project_id   String?  @db.VarChar(255) @map("project_id")
  member_email String?  @db.VarChar(255) @map("member_email")
  role         String?  @db.VarChar(100)
  added_at     DateTime @default(now()) @map("added_at")
  project      Project? @relation(fields: [project_id], references: [project_id], onDelete: NoAction, onUpdate: NoAction)

  @@map("project_team_members")
}

model ActivityLog {
  id           Int      @id @default(autoincrement())
  activity_id  String?  @db.VarChar(255) @map("activity_id")
  project_id   String?  @db.VarChar(255) @map("project_id")
  task_id      String?  @db.VarChar(255) @map("task_id")
  activity_type String? @db.VarChar(100) @map("activity_type")
  description  String?  @db.Text
  user_email   String?  @db.VarChar(255) @map("user_email")
  created_at   DateTime @default(now()) @map("created_at")

  @@map("activity_logs")
}